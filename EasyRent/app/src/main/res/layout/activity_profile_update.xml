<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_update"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/MintCream">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Update Profile"
        android:paddingTop="20dp"
        android:textSize="25dp"
        android:shadowColor="@color/GhostWhite"
        android:textColorHighlight="@color/MintCream"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageupdate"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:contentDescription="Navigation header"
        android:padding="5dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_marginBottom="30dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <EditText
        android:id="@+id/updatename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name *"
        android:textSize="20dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:background="@drawable/edit_round_button"
        android:drawableLeft="@drawable/name_register"
        android:padding="5dp"
        android:drawablePadding="15dp"
        />
    <!-- android:background="@drawable/edit_round_button"
     android:drawableLeft="@drawable/name_register"
     android:padding="5dp"
     android:drawablePadding="15dp"-->



    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/updateaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address (Location) *"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textSize="20dp"
        android:background="@drawable/edit_round_button"
        android:drawableLeft="@drawable/address_register"
        android:padding="5dp"
        android:drawablePadding="15dp"/>
    <!--android:background="@drawable/edit_round_button"
    android:drawableLeft="@drawable/address_register"
    android:padding="5dp"
    android:drawablePadding="15dp"-->


    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/updatephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone No"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:background="@drawable/edit_round_button"
        android:drawableLeft="@drawable/phone_register"
        android:padding="5dp"
        android:drawablePadding="15dp"/>
    <!--android:background="@drawable/edit_round_button"
    android:drawableLeft="@drawable/phone_register"
    android:padding="5dp"
    android:drawablePadding="15dp"-->



    <!--
     android:drawableLeft="@drawable/key"
     android:padding="5dp"
     android:drawablePadding="15dp"-->



    <Button
        android:id="@+id/update_profile"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="update"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"/>

</LinearLayout>
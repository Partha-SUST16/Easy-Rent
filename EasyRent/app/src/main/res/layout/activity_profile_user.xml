<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_user"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="My Profile"
        android:paddingTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/Black"
        android:shadowColor="@color/Black"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:id="@+id/emni"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:padding="5dp"
        android:paddingBottom="20dp"
        android:layout_gravity="center"
        android:contentDescription="Navigation header"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Name"
        android:textColor="@color/Black"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:id="@+id/show_name"
        android:fontFamily="monospace"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:hint="Address"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:id="@+id/show_address"
        android:fontFamily="monospace"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Phone"
        android:textSize="17sp"
        android:textColor="@color/Black"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:id="@+id/show_phone"
        android:fontFamily="monospace"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Email"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/Black"
        android:paddingLeft="15dp"
        android:id="@+id/show_email"
        android:fontFamily="monospace"
        />
    </LinearLayout>


    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout xmlns:rfal="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main_rfal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        rfal:rfal_frame_alpha="0.7"
        rfal:rfal_frame_color="#ffffff">

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton xmlns:rfab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_main_rfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            rfab:rfab_color_normal="#F8F75E5E"
            rfab:rfab_color_pressed="@color/Light"
            rfab:rfab_drawable="@drawable/circle_ba"
            rfab:rfab_shadow_color="#999999"
            rfab:rfab_shadow_dx="0dp"
            rfab:rfab_shadow_dy="4dp"
            rfab:rfab_shadow_radius="5dp"
            rfab:rfab_size="normal"

            />

    </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Search_Add">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the Area"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/grey"
        android:layout_marginBottom="50dp"

        />

    <EditText
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:inputType="text"
        android:background="@color/lgrey"
        android:shadowColor="@color/lgrey"
        android:hint="Type Area Name"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/search_text"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="@color/Black"
        android:shadowColor="#A8A8A8"
        android:shadowRadius="5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Search"
        android:background="@drawable/buutonshape"
        android:layout_marginTop="20dp"
        android:id="@+id/search_b"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_recyclear"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        />
    </ScrollView>
</LinearLayout>